{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Better Social",
    "description": "Better Social API Documentation",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    },
    {
      "url": "https://bettersocial-dev-user-api.herokuapp.com"
    }
  ],
  "basePath": "/",
  "tags": [
    {
      "name": "Onboarding",
      "description": "Onboarding"
    },
    {
      "name": "Profiles",
      "description": "Profiles"
    },
    {
      "name": "Users",
      "description": "Users"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
  "paths": {
    "/topics/list": {
      "get": {
        "tags": ["Onboarding"],
        "summary": "Get all topics",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/location/list": {
      "post": {
        "tags": ["Onboarding"],
        "description": "Find location for autocomplete",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Baldwin Hills"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Location found",
            "schema": {
              "$ref": "#/definitions/Locations"
            }
          }
        }
      }
    },
    "/who-to-follow/list": {
      "get": {
        "tags": ["Onboarding"],
        "summary": "Get all users related follow",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/get-my-profile/{userID}": {
      "get": {
        "tags": ["Profiles"],
        "summary": "Get my profile",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/following/{userID}": {
      "get": {
        "tags": ["Profiles"],
        "summary": "Get following user",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/get-other-profile/{userID}": {
      "get": {
        "tags": ["Profiles"],
        "summary": "Get other profile",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          },
          {
            "name": "other_user_id",
            "in": "query",
            "description": "Other user id example 288d5679-6c68-41ec-be83-7f15a4e82d3d",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/changes-real-name/{userID}": {
      "post": {
        "tags": ["Profiles"],
        "summary": "Update real name profile",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "real_name": {
                    "type": "string",
                    "example": "Amril"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/changes-image/{userID}": {
      "post": {
        "tags": ["Profiles"],
        "summary": "Update image path profile",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "profile_pic_path": {
                    "type": "string",
                    "example": "base64 image"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/remove-image/{userID}": {
      "delete": {
        "tags": ["Profiles"],
        "summary": "Remove image path profile",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/profiles/update-bio/{userID}": {
      "post": {
        "tags": ["Profiles"],
        "summary": "Update bio profile",
        "parameters": [
          {
            "in": "path",
            "name": "userID",
            "schema": {
              "type": "string"
            },
            "description": "example 288d5679-6c68-41ec-be83-7f15a4e82d3d"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "bio": {
                    "type": "string",
                    "example": "My Bio"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },

    "/profiles/set-following": {
      "post": {
        "tags": ["Profiles"],
        "description": "Set following",
        "summary": "Set following",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id_follower": {
                    "type": "string",
                    "example": "288d5679-6c68-41ec-be83-7f15a4e82d3d"
                  },
                  "user_id_followed": {
                    "type": "string",
                    "example": "288d5679-6c68-41ec-be83-7f15a4e82d3d"
                  },
                  "follow_source": {
                    "type": "string",
                    "example": "my-profile"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success set following",
            "schema": {
              "$ref": "#/definitions/Locations"
            }
          }
        }
      }
    },
    "/profiles/unset-following": {
      "post": {
        "tags": ["Profiles"],
        "description": "Unset following",
        "summary": "Unset following",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id_follower": {
                    "type": "string",
                    "example": "288d5679-6c68-41ec-be83-7f15a4e82d3d"
                  },
                  "user_id_followed": {
                    "type": "string",
                    "example": "288d5679-6c68-41ec-be83-7f15a4e82d3d"
                  },
                  "follow_source": {
                    "type": "string",
                    "example": "my-profile"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success unset following",
            "schema": {
              "$ref": "#/definitions/Locations"
            }
          }
        }
      }
    },
    "/users/blockuser":{
      "post":{
         "security":{
           "Bearer": []
         },
        "tags":["Users"],
        "description": "Blocking user",
        "summary": "Blocking user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string",
                    "example": "288d5679-6c68-41ec-be83-7f15a4e82d3d"
                  },
                  "postId": {
                    "type": "string",
                    "example": "288d5679-6c68-41ec-be83-7f15a4e82d3d"
                  },
                  "reason":{
                    "type":"array",
                    "example":["It’s spreading fake news","It’s phishing"]
                  },
                  "message":{
                    "type":"string",
                    "example":"Violence/threats against humans or animals"
                  },
                  "action":{
                    "type":"string",
                    "example":"value in/out"
                  }
                }
              }
            }
          }
        },
         "responses": {
          "200": {
            "description": "the user is already blocked"
          }
        }
      }
    }
  },
  "definitions": {
    "Locations": {
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
}
